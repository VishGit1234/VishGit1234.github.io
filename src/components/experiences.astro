---
/*
Work Experience (loaded from experience.json)
*/

import jobs from '../content/experiences.json'
import Experience from './experience.jsx'
---

<div>
  {
    jobs.slice(0, -1).map((job) => (
      <div class='mb-8'>
        <Experience client:load title={job.title} duration={job.duration} company={job.company} description={job.description}/>
      </div>
    ))
  }
  <div class='mb-4'>
    <Experience client:load title={jobs.slice(-1)[0].title} duration={jobs.slice(-1)[0].duration} company={jobs.slice(-1)[0].company} description={jobs.slice(-1)[0].description}/>
  </div>
